<!DOCTYPE html>
<html lang="en">

<%- include('../layouts/head.ejs', { title: "Home" }) %>

<body>
	<%- include('../layouts/navbar.ejs') %>
	<link rel="apple-touch-icon" href="../public/images/apple-touch-icon.png">
	<div class="jumbotron">
		<h1>Popular videos of Swiss001</h1>
		<section class="grid">
			<% JSON.parse(videos).forEach(video => { %>
			<div class="card">
				<figure><img src="<%- video.thumbnails.medium.url %>" alt="<%- video.title %>" width="100%">
					<figcaption><%- video.title %></figcaption>
				</figure>
				<div class="card-body">
					<a href="https://www.youtube.com/watch?v=<%- video.id %>" target="__blank" class="cta"
						style="margin: 0 auto;"><button>Watch
							this
							video!</button></a>
				</div>
			</div>
			<% }) %>
		</section>
	</div>

	<%- include('../layouts/footer.ejs') %>
</body>

</html>